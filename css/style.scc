.cases-header h1 {
  font-family: "Playfair Display", serif;
  font-size: 2.2rem;
  margin: 0;
}

.cases-header img {
  height: 200px; 
  width: auto;
  border-radius: 8px; 
  object-fit: cover;
}

.search-box {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  margin: 8px 0 20px;
}

.search-box input {
  padding: 10px 15px;
  width: 300px;
border: 1px solid var(--muted);
  border-radius: 8px;
 background: var(--panel);
  color: white;
  outline: none;
}

.search-box button {
  padding: 10px 20px;
  border: none;
  border-radius: 8px;
  background: #d94b3b; 
  color: white;
  font-weight: 600;
  cursor: pointer;
  transition: 0.2s;
}

.search-box button:hover {
  background: #b93d2e; 
}
  
/* === СТРАНИЦА УСЛУГ — полностью изолировано === */

.services-page {
  padding: 60px 0;
  background: var(--bg);
}

.services-page h2 {
  text-align: center;
  color: #fff;
  font-size: 2rem;
  margin-bottom: 10px;
}

.services-page .section-subtitle {
  text-align: center;
  color: var(--muted);
  margin-bottom: 40px;
}

.services-page .services-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 25px;
}

.services-page .service-card {
  background: var(--panel);
  border-radius: 14px;
  padding: 20px;
  text-align: center;
  transition: 0.3s ease;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  height: 100%;
}

.services-page .service-card:hover {
  transform: translateY(-5px);
  background: var(--glass);
}

.services-page .service-card img {
  width: 100%;
  height: 180px;
  object-fit: cover;
  border-radius: 10px;
  margin-bottom: 15px;
}

.services-page .service-card h3 {
  color: #fff;
  margin-bottom: 8px;
  font-size: 1.2rem;
  line-height: 1.4;
}

.services-page .service-card p {
  color: var(--muted);
  font-size: 0.95rem;
  line-height: 1.5;
  flex-grow: 1;
}

/* Поиск */
.search-block {
  background: var(--panel);
  padding: 25px 0;
  text-align: center;
}

.search-block input {
  width: 80%;
  max-width: 500px;
  padding: 12px 18px;
  border-radius: 10px;
  border: none;
  background: var(--card);
  color: #fff;
  font-size: 16px;
  outline: none;
}

/* Красный блок */
.red-band {
  background: var(--accent);
  color: #fff;
  padding: 60px 20px;
  text-align: center;
  margin-top: 60px;
}

.red-band img {
  width: 100%;
  max-width: 400px;
  border-radius: 10px;
  margin-top: 20px;
}

/* === Адаптив === */
@media (max-width: 1200px) {
  .services-page .services-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

@media (max-width: 900px) {
  .services-page .services-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 600px) {
  .services-page .services-grid {
    grid-template-columns: 1fr;
  }
  .search-block input {
    width: 90%;
  }
}

