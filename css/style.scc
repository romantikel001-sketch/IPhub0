:root{
  --bg:#0f0f0f;
  --panel:#151515;
  --muted:#9a9a9a;
  --accent:#d94b3b;
  --glass: rgba(255,255,255,0.03);
  --card: rgba(255,255,255,0.02);
  --maxw:1200px;
  --radius:14px;
  color-scheme: dark;
}

*{box-sizing:border-box;margin:0;padding:0}
html,body{height:100%}
body{
  font-family:Inter,system-ui,Segoe UI,Roboto,"Helvetica Neue",Arial;
  background: linear-gradient(180deg,#0b0b0b 0%, #0f0f0f 40%);
  color:#eee;
  line-height:1.6;
  -webkit-font-smoothing:antialiased;
  -moz-osx-font-smoothing:grayscale;
}

.container{max-width:var(--maxw);margin:0 auto;padding:0 32px}

header{background:var(--glass);backdrop-filter:blur(10px);padding:18px 0;position:sticky;top:0;z-index:1000;border-bottom:1px solid rgba(255,255,255,0.03)}
.header-top{display:flex;align-items:center;justify-content:space-between;padding:0 0 15px}
.logo{font-family:Playfair Display,serif;font-weight:700;color:#fff;font-size:22px}
.contact-phone{font-size:18px;font-weight:bold;color:var(--accent)}
.nav-main{display:flex;gap:30px;align-items:center;padding:15px 0 0;border-top:1px solid rgba(255,255,255,0.06)}
.nav-main a{color:var(--muted);text-decoration:none;font-size:14px;transition:color 0.3s;font-weight:500}
.nav-main a:hover,.nav-main a.active{color:#fff}
.cta-button{background:var(--accent);color:#fff;padding:8px 16px;border-radius:999px;text-decoration:none;font-weight:600;transition:background 0.3s}
.cta-button:hover{background:#c84231}

.hero{background:linear-gradient(135deg, #1a1a1a 0%, #2c2c2c 100%);color:white;padding:120px 0 80px;margin-top:0}
.hero-content{text-align:center;max-width:800px;margin:0 auto}
.eyebrow{color:var(--muted);font-size:13px;margin-bottom:12px;text-transform:uppercase;letter-spacing:1px}
.hero h1{font-family:Playfair Display,serif;font-size:48px;line-height:1.05;margin:0 0 20px}
.hero .lead{color:var(--muted);font-size:18px;margin:0 0 30px}
.hero-buttons{display:flex;gap:14px;justify-content:center;margin-bottom:40px}

.btn{padding:12px 24px;border-radius:999px;border:0;cursor:pointer;text-decoration:none;display:inline-block;text-align:center;transition:all 0.3s;font-weight:600;font-size:14px}
.btn-primary{background:var(--accent);color:#111}
.btn-primary:hover{background:#c84231;transform:translateY(-1px)}
.btn-ghost{background:transparent;border:1px solid rgba(255,255,255,0.1);color:var(--muted)}
.btn-ghost:hover{background:rgba(255,255,255,0.05);color:#fff;border-color:rgba(255,255,255,0.2)}

.stats{padding:60px 0;background:var(--panel)}
.stats-grid{display:grid;grid-template-columns:repeat(4,1fr);gap:30px}
.stat-item{text-align:center}
.stat-item h3{font-size:36px;color:var(--accent);margin-bottom:8px;font-weight:700}
.stat-item p{color:var(--muted);font-size:14px}

.clients-section{padding:40px 0;border-bottom:1px solid rgba(255,255,255,0.03)}
.clients{display:flex;gap:18px;align-items:center;justify-content:center;flex-wrap:wrap}
.clients .logo-s{min-width:200px;height:48px;background:var(--card);display:flex;align-items:center;justify-content:center;border-radius:8px;color:var(--muted);font-weight:600;border:1px solid rgb(255, 255, 255);padding:0 100px}

.services-preview{padding:80px 0}
.services-preview h2{font-family:Playfair Display,serif;font-size:36px;text-align:center;margin-bottom:50px}
.services{display:grid;grid-template-columns:repeat(3,1fr);gap:24px;margin-bottom:40px}
.svc-card{background:linear-gradient(180deg, rgb(255, 255, 255), rgb(255, 255, 255));padding:30px;border-radius:12px;border:1px solid rgb(255, 255, 255);text-align:center;transition:transform 0.3s}
.svc-card:hover{transform:translateY(-5px)}
.svc-card svg{width:72px;height:72px;opacity:0.9;margin-bottom:20px;color:var(--accent)}
.svc-card h4{margin:0 0 12px;font-size:18px}
.svc-card p{margin:0;color:var(--muted);font-size:14px;line-height:1.5}

.red-band{background:linear-gradient(90deg,var(--accent),#c84231);padding:60px 0;margin:60px 0}
.red-band-content{display:flex;align-items:center;gap:40px}
.red-band h2{font-family:Playfair Display,serif;font-size:32px;margin:0 0 16px;color:#fff}
.red-band p{color:rgba(255,255,255,0.92);font-size:16px;max-width:600px;margin:0 0 24px}
.decorative-orb{width:220px;height:220px;border-radius:12px;background:rgba(0,0,0,0.12);display:flex;align-items:center;justify-content:center}

.faq-preview{padding:80px 0;background:var(--panel)}
.faq-preview h2{font-family:Playfair Display,serif;font-size:36px;text-align:center;margin-bottom:40px}
.accordion{max-width:800px;margin:0 auto;background:var(--bg);padding:30px;border-radius:12px;border:1px solid rgba(255,255,255,0.03)}
details{margin-bottom:15px;border-bottom:1px solid rgba(255,255,255,0.05);padding-bottom:15px}
details:last-child{margin-bottom:0;border-bottom:none}
summary{cursor:pointer;padding:10px 0;font-weight:600;font-size:16px;list-style:none}
summary::-webkit-details-marker{display:none}
details[open] summary{margin-bottom:10px}
details div{padding:0 0 10px;color:var(--muted);font-size:14px;line-height:1.5}

footer{background:var(--panel);padding:60px 0 20px;border-top:1px solid rgba(255,255,255,0.03)}
.footer-grid{display:grid;grid-template-columns:2fr 1fr 1fr 1fr;gap:40px;margin-bottom:40px}
.footer-info h3{margin-bottom:15px;color:#fff;font-family:Playfair Display,serif}
.footer-info p{color:var(--muted);font-size:14px;line-height:1.5;margin-bottom:20px}
.footer-nav h4,.footer-contacts h4,.footer-social h4{margin-bottom:15px;color:#fff;font-size:16px}
.footer-nav ul{list-style:none}
.footer-nav ul li{margin-bottom:8px}
.footer-nav ul li a{color:var(--muted);text-decoration:none;transition:color 0.3s;font-size:14px}
.footer-nav ul li a:hover{color:#fff}
.footer-contacts p,.footer-social p{color:var(--muted);font-size:14px;margin-bottom:8px}
.footer-bottom{border-top:1px solid rgba(255,255,255,0.05);padding-top:20px;color:var(--muted);font-size:13px}

.faq-page{padding:120px 0 80px}
.faq-page h1{text-align:center;margin-bottom:40px;font-size:42px;font-family:Playfair Display,serif}
.search-box{max-width:500px;margin:0 auto 40px}
.search-box input{width:100%;padding:15px 20px;border:1px solid rgba(255,255,255,0.1);border-radius:999px;font-size:16px;background:var(--panel);color:#fff}
.search-box input::placeholder{color:var(--muted)}
.categories{display:flex;gap:12px;margin-bottom:40px;flex-wrap:wrap;justify-content:center}
.category-btn{padding:10px 20px;border:1px solid rgba(255,255,255,0.1);border-radius:999px;background:var(--panel);color:var(--muted);cursor:pointer;transition:all 0.3s;font-size:14px}
.category-btn.active,.category-btn:hover{background:var(--accent);color:#111;border-color:var(--accent)}
.faq-list{max-width:800px;margin:0 auto}
.faq-item{background:var(--panel);border:1px solid rgba(255,255,255,0.03);border-radius:8px;margin-bottom:15px;padding:0;overflow:hidden;transition:all 0.3s}
.faq-item.active,.faq-item:hover{border-color:rgba(255,255,255,0.1)}
.faq-question{padding:20px;cursor:pointer;font-weight:600;font-size:16px;margin:0}
.faq-answer{padding:0 20px 20px;display:none;color:var(--muted);font-size:14px;line-height:1.6;border-top:1px solid rgba(255,255,255,0.05)}
.faq-item.active .faq-answer{display:block}
.consultation-section{text-align:center;padding:60px 40px;background:var(--panel);margin-top:60px;border-radius:12px;border:1px solid rgba(255,255,255,0.03)}
.consultation-section h2{font-size:32px;margin-bottom:15px;color:#fff;font-family:Playfair Display,serif}
.consultation-section h3{font-size:24px;margin-bottom:15px;color:var(--muted)}
.consultation-section p{margin-bottom:30px;font-size:16px;color:var(--muted)}

.services-page{padding:120px 0 80px}
.services-page h1{text-align:center;margin-bottom:50px;font-family:Playfair Display,serif;font-size:42px}
.category-grid{display:grid;grid-template-columns:repeat(3,1fr);gap:30px;margin-bottom:60px}
.category-card{background:var(--panel);padding:30px;border-radius:12px;border:1px solid rgba(255,255,255,0.03)}
.category-card h3{margin-bottom:20px;font-family:Playfair Display,serif;color:#fff}
.category-card ul{list-style:none}
.category-card li{color:var(--muted);padding:8px 0;border-bottom:1px solid rgba(255,255,255,0.03);font-size:14px}
.category-card li:last-child{border-bottom:none}
.process h2{text-align:center;margin-bottom:40px;font-family:Playfair Display,serif;font-size:36px}
.process-steps{display:grid;grid-template-columns:repeat(3,1fr);gap:30px}
.step{text-align:center;padding:30px}
.step h3{margin-bottom:15px;color:#fff;font-size:18px}
.step p{color:var(--muted);font-size:14px;line-height:1.5}

.error-page{padding:120px 0;text-align:center}
.error-content h1{font-size:120px;color:var(--accent);margin-bottom:20px;font-family:Playfair Display,serif}
.error-content h2{font-size:32px;margin-bottom:20px;color:#fff}
.error-content p{color:var(--muted);font-size:18px;margin-bottom:30px;max-width:500px;margin-left:auto;margin-right:auto}

.modal{display:none;position:fixed;z-index:2000;left:0;top:0;width:100%;height:100%;background:rgba(0,0,0,0.8);backdrop-filter:blur(5px)}
.modal-content{background:var(--panel);margin:10% auto;padding:40px;border-radius:12px;width:90%;max-width:500px;border:1px solid rgba(255,255,255,0.05);position:relative}
.close{color:#aaa;float:right;font-size:28px;font-weight:bold;cursor:pointer;position:absolute;right:20px;top:15px;transition:color 0.3s}
.close:hover{color:#fff}
.modal-content h3{margin-bottom:20px;font-family:Playfair Display,serif;text-align:center}
.modal-content form{display:flex;flex-direction:column;gap:15px}
.modal-content input,.modal-content textarea{background:rgba(255,255,255,0.05);border:1px solid rgba(255,255,255,0.1);border-radius:8px;padding:12px 15px;color:#fff;font-family:inherit;font-size:14px}
.modal-content input::placeholder,.modal-content textarea::placeholder{color:var(--muted)}
.modal-content textarea{resize:vertical;min-height:100px}

.center{display:flex;align-items:center;justify-content:center}
.muted{color:var(--muted)}

@media(max-width:968px){
  .container{padding:0 20px}
  .hero{padding:100px 0 60px}
  .hero h1{font-size:36px}
  .hero-buttons{flex-direction:column;align-items:center}
  .stats-grid,.grid,.services,.process-steps,.footer-grid{grid-template-columns:repeat(2,1fr)}
  .cases,.cases-grid,.category-grid{grid-template-columns:1fr}
  .red-band-content{flex-direction:column;text-align:center}
  .nav-main{flex-wrap:wrap;justify-content:center}
  .header-top{flex-direction:column;gap:10px;text-align:center}
}

@media(max-width:640px){
  .hero h1{font-size:28px}
  .stats-grid,.grid,.services,.process-steps,.footer-grid{grid-template-columns:1fr}
  .clients{gap:10px}
  .clients .logo-s{min-width:90px;height:40px;font-size:12px}
  .modal-content{padding:30px 20px;margin:5% auto}
}

.team-section {
